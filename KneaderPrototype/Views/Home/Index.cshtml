@using KneaderPrototype.Controllers
@using System.Web.Mvc
@{
    ViewBag.Title = "Home - Diosna cloud";
    bool hasKBAse = false;
    foreach (dynamic projectNumber in ViewBag.Numbers)
    {
        if(projectNumber == 10000) {
            hasKBAse = true;
            break;
        }
    }
    int index;
    if (hasKBAse == true) {
        index = 1;
    } else {
        index = 0;
    }
    double some = Math.Ceiling((double)ViewBag.Numbers.Count / 3);
}
<h2>Welcome to Diosna cloud homepage</h2>
<div class="row">
    <h6>Select your project / kneader</h6>
    <div class="well">
        @for (int idx = index; idx <= some; idx++)
        {
            <div class="btn-group btn-group-justified">
                @for (int i = 1; i <= 3 && index <= (ViewBag.Count - 1); i++)
                {
                    <a href="/Menu/Index/@ViewBag.Numbers[index]" class="btn btn-primary">@ViewBag.Text[index]&rAarr;</a>
                    index++;
                }
            </div>
            <p></p>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Compatibility</h2>
        <p>
            Whole system designed for fermentation systems for kenaders is this demo version
            Compatible with chrome<br>
        </p>
        <p><a class="btn btn-primary" href="http://prototype.diosna.cz/Home/Compatibility/">See more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>News</h2>
        <p>
            In latest update have been added following features:<br>
            Main UI problems solved<br>
            Reports batch detail done<br>
            Alarms new UI <br>
            CMS sesctions and file attachment<br>
            Fiter from alarms is done<br>
        </p>
        <p><a class="btn btn-primary" href="http://prototype.diosna.cz/Home/News/">See more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Link to fermentation systems:</h2>
        <p>If you need old users click below</p>
        <p><a class="btn btn-primary" href="http://users.diosna.cz/">Bye &raquo;</a></p>
    </div>
</div>